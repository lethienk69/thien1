<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".Dat_cho">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Chào bạn"
        android:textSize="30dp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:text="Hà Nội-Điện Biên"
            android:textSize="25dp"
            android:background="@drawable/button_thuong"
            android:textColor="#ffff"
            ></Button>
        <Button
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:text="Điện Biên-Hà Nội"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_thuong"
            android:textColor="#ffff"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:text="Hà Nội-Hải Phòng"
            android:textSize="25dp"
            android:background="@drawable/button_thuong"
            android:textColor="#ffff"
            ></Button>
        <Button
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:text="HảiPhòng-Hà Nội"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_thuong"
            android:textColor="#ffff"
            ></Button>
    </LinearLayout>
    <buttom
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Vé của tôi"
        android:textSize="20dp"
        android:textColor="#ffff"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_rounded"

        ></buttom>
</LinearLayout>