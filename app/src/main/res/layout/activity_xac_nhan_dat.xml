<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".Xac_nhan_dat">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Xác nhận đặt vé"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Tên:"
                android:textSize="22dp"
                android:gravity="left"
                android:textStyle="normal"
                ></TextView>

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:gravity="center"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Ngày sinh:"
                android:textSize="22dp"
                android:gravity="left"
                android:textStyle="normal"
                ></TextView>

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:gravity="center"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Tuyến:"
                android:textSize="22dp"
                android:gravity="left"
                android:textStyle="normal"
                ></TextView>

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:gravity="center"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Ngày đi:"
                android:textSize="22dp"
                android:gravity="left"
                android:textStyle="normal"
                ></TextView>

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:gravity="center"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Giờ đi:"
                android:textSize="22dp"
                android:gravity="left"
                android:textStyle="normal"
                ></TextView>

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:gravity="center"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Chỗ ngồi:"
                android:textSize="22dp"
                android:gravity="left"
                android:textStyle="normal"
                ></TextView>

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:gravity="center"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Tiền:"
                android:textSize="22dp"
                android:gravity="left"
                android:textStyle="normal"
                ></TextView>

            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:gravity="center"></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="220dp"
            >
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Quay Lại"
                android:textSize="25dp"
                android:background="@drawable/button_thuong"
                android:textColor="#ffff"
                ></Button>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Xác nhận"
                android:textSize="25dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_thuong"
                android:textColor="#ffff"
                ></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>